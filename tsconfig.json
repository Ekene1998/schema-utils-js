{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typedocOptions": {
    "name": "@open-rpc/schema-utils-js",
    "entryPoints": [
      "./src/index.ts"
    ],
    "out": "docs",
    "readme": "./README.md",
    "exclude": [
      "node_modules",
      "docs",
      "build",
      "jest.config.js",
      "src/*.test.ts",
      "src/**/*.test.ts"
    ]
  }
}
